{
  "name": "pentagonal/database-dbal",
  "description": "Just to extend `Doctrine DBAL` in an easier way for `lazy people`",
  "type": "library",
  "keywords": [
    "dbal",
    "database",
    "persistence",
    "doctrine",
    "lazy",
    "helper"
  ],
  "license": "MIT",
  "require": {
    "php": "^7 | ^8",
    "ext-pdo": "*",
    "doctrine/dbal": "^2"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "3.*"
  },
  "authors": [
    {
      "name": "pentagonal",
      "email": "org@pentagonal.org"
    }
  ],
  "suggest" : {
    "ext-iconv": "for sanitation usage for invalid UTF-8 characters",
    "ext-mbstring": "to check length for sanitation"
  },
  "autoload" : {
    "psr-4": {
      "Pentagonal\\DatabaseDBAL\\": "Src/"
    }
  }
}
